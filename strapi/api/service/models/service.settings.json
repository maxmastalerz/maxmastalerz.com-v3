{
  "kind": "collectionType",
  "collectionName": "services",
  "info": {
    "name": "service",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "default": "Service title"
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "long_desc": {
      "type": "richtext",
      "default": "Service details go here.",
      "required": true
    }
  }
}
